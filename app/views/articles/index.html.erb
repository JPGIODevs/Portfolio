<%= stylesheet_link_tag "articles"%>

<div class="container article-padding mt-5 pt-5">
    <h1>Blog Articles</h1>

    <h5 class="mb-3 pb-3">Our blog has <%= Article.public_count %> articles and counting!</h5>

    <ul>
        <% @articles.each do |article| %>
            <% unless article.archived? %>
                <li>
                    <%= link_to article.title, article%>
                    <br/>
                    <p><%= article.body %></p>
                </li>
            <% end %>
        <% end %>
    </ul>
    <br/>
    <%= link_to "New Article", new_article_path, class: "btn btn-outline-light link" %>
</div>
